{
  "functions": {
    "source": "functions"
  },
  "hosting": [
    {
      "site": "snapsign-au",
      "public": "snapsign.com.au/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "decodocs-site",
      "public": "Decodocs/web/decodocs.com",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/setDocByPath",
          "function": {
            "functionId": "setDocByPath",
            "region": "us-central1"
          }
        },
        {
          "source": "/api/getDocByPath",
          "function": {
            "functionId": "getDocByPath",
            "region": "us-central1"
          }
        },
        {
          "source": "/view{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/edit{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/profile{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/sign-in{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/sign-up{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/pricing{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/about{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/contact{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/sign{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "/app{,/**}",
          "destination": "/app/index.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "decodocs-admin",
      "public": "Decodocs/admin/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
