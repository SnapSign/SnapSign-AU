---
import BaseLayout from "../layouts/BaseLayout.astro";
import SiteHeader from "../components/SiteHeader.astro";
import FeedbackCTA from "../components/FeedbackCTA.astro";

const title = "Explain Business Documents in Plain English | DecoDocs";
const description =
  "DecoDocs explains documents in plain English so you can understand what they say — even if English isn't your first language.";
const canonical = "https://snapsign.com.au/explain-documents/";
const twitterDescription =
  "DecoDocs translates and explains documents so you actually understand what they say.";
---
<BaseLayout
  title={title}
  description={description}
  canonical={canonical}
  ogUrl={canonical}
  twitterDescription={twitterDescription}
>
  <div class="container">
    <SiteHeader />

    <section class="page-hero">
      <span class="eyebrow">DecoDocs use case</span>
      <h1>Explain business documents in plain English</h1>
      <h2>DecoDocs explains documents so you understand what they say — even if English isn't your first language</h2>

      <a href="https://decodocs.com/?utm_source=snapsign.com.au&utm_medium=use_case&utm_campaign=explain_documents" class="button">Upload a Document to Explain</a>
    </section>

    <div class="problem-section">
      <h3>The Problem</h3>
      <p>
        Business documents are often complex, poorly written, and full of legal or technical language. If English is not your first language, this gets even harder.
      </p>
    </div>

    <div class="benefits-section">
      <h3>What You Get</h3>
      <ul>
        <li><strong>Plain-language explanations</strong> you can actually understand</li>
        <li><strong>Clear understanding</strong> of responsibilities</li>
        <li><strong>Fewer misunderstandings</strong> with clients or partners</li>
      </ul>
    </div>

    <div class="how-section">
      <h3>How DecoDocs Helps</h3>
      <ul>
        <li>Explains documents in simple language</li>
        <li>Translates documents or sections when needed</li>
        <li>Shows explanations side-by-side with the original text</li>
      </ul>
      <p><strong>You don't need to "interpret" anything yourself.</strong></p>
    </div>

    <div class="how-it-works">
      <h3>How It Works</h3>
      <ol>
        <li>Upload a document</li>
        <li>Choose explanation or translation</li>
        <li>Read and understand before acting</li>
      </ol>
    </div>

    <a href="https://decodocs.com/?utm_source=snapsign.com.au&utm_medium=use_case&utm_campaign=explain_documents_bottom" class="button">Upload a Document and Explain It</a>

    <FeedbackCTA />

  </div>
</BaseLayout>
