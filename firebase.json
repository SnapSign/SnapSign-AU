{
  "functions": {
    "source": "functions"
  },
  "hosting": [
    {
      "site": "snapsign-au",
      "public": "public",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "site": "decodocs-site",
      "public": "decodocs-repo/web/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "/",
          "destination": "https://decodocs.com/",
          "type": 301
        },
        {
          "source": "**",
          "destination": "https://decodocs.com/",
          "type": 301
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}